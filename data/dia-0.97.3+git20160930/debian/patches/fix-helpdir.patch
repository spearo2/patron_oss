===================================================================
--- dia-0.97.3+git20160930.orig/doc/Makefile.am
+++ dia-0.97.3+git20160930/doc/Makefile.am
@@ -8,11 +8,7 @@ EXTRA_DIST = \
 	shape.dtd \
 	sheet.dtd
 
-if HAVE_GNOME
-helpdir = $(datadir)/gnome/help/$(docname)
-else
-helpdir = $(pkgdatadir)/help
-endif
